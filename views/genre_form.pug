extends layout

block content
  h1= title

  form(method="POST" action='')
    div.form-group
          label(for='name') Name:
          input#name.form-control(type='text', placeholder='Name of genre' name='name' required='true' value=(undefined===genre ? '' : genre.name) )
    button.btn(type='submit') Submit
  
  if errors 
    ul 
      for error in errors   
        li!= error.msg